<Window x:Class="DeleteTransactionInDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeleteTransactionInDB"
        mc:Ignorable="d"
        Title="Удаление зависших транзакций" Height="250" Width="500" 
        WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Label VerticalAlignment="Top" Height="40" Margin="0,5,0,0" HorizontalAlignment="Center" FontSize="20">Удаление зависших транзакций</Label>
        <Button x:Name="withNumber" Margin="19,0,25,79" Height="50" 
                VerticalAlignment="Bottom" 
                FontSize="20" Click="withNumber_Click">
            Удаление зависшей транзакции с номером
        </Button>
        <Button x:Name="withoutNumber" Margin="0,0,0,-100" HorizontalAlignment="Center" 
                Width="450" Height="50" 
                VerticalAlignment="Center" 
                FontSize="20" Visibility="Collapsed">
            Удаление зависшей транзакции без номера
        </Button>
    </Grid>
</Window>
